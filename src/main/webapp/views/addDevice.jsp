<center>
    <h1 style="color: green;">Add Device Details</h1>
</center>
<form action="success">
    <table>
        <tr>
            <th>Device ID </th>
            <td><input type="number" name="d_id"/></td>
        </tr>

        <tr>
            <th>Device Name </th>
            <td><input type="text" name="d_name"/></td>
        </tr>

        <tr>
            <th>Device Image </th>
            <td><input type="text" name="d_image"/></td>
        </tr>

        <tr>
            <th>Device Cost </th>
            <td><input type="number" name="d_cost"/></td>
        </tr>

        <tr>
            <th>Device Warranty </th>
            <td><input type="number" name="d_warranty"/></td>
        </tr>

        <tr>
            <th>Device RAM </th>
            <td><input type="number" name="d_ram"/></td>
        </tr>

        <tr>
            <th>Device SSD </th>
            <td><input type="number" name="d_ssd"/></td>
        </tr>

        <tr>
            <th>Device Manfyear </th>
            <td><input type="number" name="d_manfyear"/></td>
        </tr>

        <tr>
            <td colspan="2">
                <input type="submit" value="Add Device"/>
            </td>
        </tr>
    </table>
</form>